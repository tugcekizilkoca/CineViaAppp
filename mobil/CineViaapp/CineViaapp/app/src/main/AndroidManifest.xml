            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBNqh4pWHOfKOO4A4cZYwieIKtYIMgl7D8" /> <!-- SplashScreen Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- AuthActivity Activity -->
        <activity
            android:name=".AuthActivity"
            android:exported="false">

            <!-- Diğer özellikler -->
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".WatchLaterActivity" />
        <activity android:name=".RegisterActivity" />


        <activity android:name=".NearbyCinemas" />
        <activity
            android:name=".HomeScreen"
            android:exported="false">

            <!-- Diğer özellikler -->
        </activity>

        <activity
            android:name=".MovieDetail"
            android:exported="false">

            <!-- Diğer özellikler -->
        </activity>
    </application>

</manifest>