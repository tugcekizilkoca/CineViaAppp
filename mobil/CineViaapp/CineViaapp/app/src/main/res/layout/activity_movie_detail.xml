<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MovieDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#050505">

    <!-- Afiş -->
    <ImageView
        android:id="@+id/imagePoster"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:background="#444"/>

    <!-- Başlık -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagePoster"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <!-- Özet -->
    <TextView
        android:id="@+id/textDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagePoster"
        android:layout_below="@id/textTitle"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:textColor="#ccc"
        android:textSize="16sp"/>

    <!-- ⭐️ Yeni: Yıl • Süre • Türler -->
    <!--  Yıl • Süre • Türler  -->
    <TextView
        android:id="@+id/textMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagePoster"
        android:layout_below="@id/textDetails"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:textColor="#bbbbbb"
        android:textSize="15sp" />

    <!--  Oyuncu kadrosu  -->
    <TextView
        android:id="@+id/textCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMeta"
        android:layout_alignStart="@id/textMeta"
        android:layout_marginTop="8dp"
        android:textColor="#bbbbbb"
        android:textSize="15sp" />

    <!--  CheckBox'lar  -->
    <CheckBox
        android:id="@+id/chcFavoriler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="156dp"
        android:text="Favoriler"
        android:textColor="#f6f3f3"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/chcDahasonra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="96dp"
        android:text="Daha Sonra İzle"
        android:textColor="#f6f3f3"
        android:textSize="20dp" />


</RelativeLayout>
