<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".HomeScreen">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
    >

    <LinearLayout
        android:id="@+id/sectionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" />
</ScrollView>


<ImageButton
android:id="@+id/profileButton"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_alignParentEnd="true"
android:layout_margin="36dp"
android:background="@android:color/transparent"
android:contentDescription="Profil"
android:src="@drawable/ic_profile"
    />


<ImageButton
android:id="@+id/btnLists"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_toStartOf="@id/profileButton"
android:layout_marginEnd="16dp"
android:layout_marginTop="36dp"
android:background="@android:color/transparent"
android:contentDescription="Listeler"
android:src="@drawable/ic_list"
    />


<ImageButton
android:id="@+id/btnSinemalar"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_toStartOf="@id/btnLists"
android:layout_marginEnd="16dp"
android:layout_marginTop="36dp"
android:background="@android:color/transparent"
android:contentDescription="Sinemalar"
android:src="@drawable/ic_location"
    />


<ImageButton
android:id="@+id/btnChatbot"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_alignParentStart="true"
android:layout_margin="36dp"
android:background="@android:color/transparent"
android:contentDescription="Chatbot"
android:src="@drawable/ic_chatbot"
    />

    <Button
        android:id="@+id/btnfilmoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="31dp"
        android:text="filmoner" />
</RelativeLayout>
